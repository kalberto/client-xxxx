// Documentos

article#documentos
    padding 100px 0 0 100px
    &.white
        p
            color #000;
        ul
            li
                a, button
                    color #000
    h2
        font-size rem(24); line-height rem(32); color $laranja; text-transform uppercase; font-weight $font-bold;
    p
        color #fff; font-size rem(20); line-height rem(28); font-weight $font-light; opacity 0.7; margin-bottom 25px
    ul
        li
            a, button
                display block; color #fff; opacity 0.6; text-transform uppercase; font-size rem(18); line-height rem(40)
                text-decoration: none; transition all 0.1s ease
                &:hover
                    opacity 1


+mobile-600()
    article#documentos
        padding 20px