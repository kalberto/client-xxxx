// Home

@keyframes connecting 
    0%, 9%, 91%, 100%
        opacity 0;
    10%
        top 105%; opacity 1
    90%
        top -240%; opacity 1

@keyframes parallax
    0%
        transform: translateY(0)
    100%
        transform: translateY(100%)

@keyframes parallax2
    0%
        transform: translateY(0)
    100%
        transform: translateY(-100%)


article#home
    display grid; grid-template-columns repeat(4, 1fr); grid-template-rows repeat(2, 1fr);
    grid-template-areas "cat1 . cat3 marcaDagua" "video cat2 . cat4";

    section
        position relative;
    
    .categoria
        z-index 2; min-height 358px;
        picture
            overflow hidden; display block; position relative; height 100%
            img
                position absolute; min-width 100%; min-height 100%; top 50%; transform translateY(-50%);
                transition transform 2s ease; max-width none
            &:after
                content ''; width 100%; height 100%; position absolute; bottom 0; left 0; 
                background linear-gradient(15deg, rgba(#000, .8), transparent 45%)
        .descricao
            position absolute; height 100%; display flex; flex-direction column; justify-content flex-end; 
            padding 1.5em 1.25em; color $branco; width 100%; top 0; left 0; transition all 1s ease-in-out

            &:after
                content ''; height 2px; background $laranja2; display block; width 90%; margin-top rem(10); transition all 0.8s ease-in-out 0.8s

            h3
                font-size rem(30); letter-spacing letterSpacing(150); line-height rem(30); text-transform uppercase;
                font-weight $font-bold; margin rem(8) 0; transition all 0.8s ease-in-out
                &:after
                    content ''; height 2px; background $laranja2; display block; width 221px; margin-top rem(10); transition all 0.8s ease-in-out;
                    transform-origin left center; transform scale(0)
            .texto
                max-height 0; overflow hidden; max-width 492px; margin 0; transition all 0.9s ease-in-out
                p
                    font-size rem(16); line-height rem(24); color #1c1b1c; margin-bottom 2em
                span
                    font-size rem(14); line-height rem(24); color #7f7f7f; text-transform uppercase
            .subtitulo
                font-size rem(18); line-height rem(24); overflow hidden; max-height 100px; transition all 0.3s ease-in-out
            span
                font-size rem(14); line-height rem(24); 
            a
                display block; width 181px; margin 0 0 7px auto; color $laranja; text-transform uppercase; color #ca462f; max-height 0px;
                overflow: hidden; font-weight $font-bold; text-decoration none; letter-spacing letterSpacing(150)
        &.hasHover
            &:hover
                .descricao
                    width 200%; background #fff; padding 1.5em 0 1.5em 1.25em; 
                    &:after
                        width 181px; background $laranja; margin 0 0 0 auto;
                    h3
                        color #1c1b1c;
                        &:after
                            transform scale(1)
                    span
                        color #1c1b1c
                    .subtitulo
                        max-height: 0
                    a
                        max-height 100px; margin 0 0 0px auto; padding-bottom 7px;
                    .texto
                        margin 2em 0; max-height 300px;
        
        &:not(.hasHover)
            &:hover
                picture
                    img
                        transform scale(1.05) translateY(-50%)

        &:nth-child(1)
            grid-area cat1; animation parallax 60s linear infinite alternate; z-index 3
        &:nth-child(2)
            grid-area cat2; animation parallax2 60s linear infinite alternate;
        &:nth-child(3)
            grid-area cat3; animation parallax 60s linear infinite alternate;
        &:nth-child(4)
            grid-area cat4; animation parallax2 60s linear infinite alternate;
    
    .assista
        grid-area video; display flex; align-items flex-end; padding-bottom 10px 
        button
            font-size 18px; color #fff; line-height 72px; border-left 2px solid $laranja2; padding-left 15px; position relative;
            cursor pointer; outline 0
            img
                display inline-block; margin-right 10px
            &:before
                content ''; width calc(100% - 15px); left 15px; bottom 15px; position absolute; background #fff; opacity 0.8; height 2px; transform-origin left center;
                transform: scaleX(0); transition all 0.8s ease;
            &:hover
                &:before
                    transform: scaleX(1)
    
    .marcaDagua
        grid-area marcaDagua; display flex; justify-content center; align-items center; padding 1.5em; user-select none; pointer-events none
    
    .connecting
        mask-image radial-gradient(circle, rgba(#000, 1) 0%, rgba(#000, 0) 85%); overflow hidden; user-select none; pointer-events none
        h2
            writing-mode vertical-lr; text-orientation upright; text-transform uppercase;
            color rgba($branco, .15); font-weight $font-light; font-size rem(26); line-height rem(60); 
            letter-spacing letterSpacing(350); position absolute; left 50%; transform translateX(-50%);
            white-space nowrap; animation connecting 15s linear infinite; top 105%

