+desktop-1024()
    article#home
        overflow-y scroll; grid-template-areas "cat1 marcaDagua" "video cat2 " "cat3 . " " . cat4";
        grid-template-columns: repeat(2, 1fr); grid-template-rows: repeat(4, 1fr);
        .categoria
            height 362px;

+tablet-1024()
    article#home
        overflow-y scroll; grid-template-areas "cat1" "cat2 " "cat3" "cat4" "video"; overflow-x hidden
        grid-template-columns: repeat(1, 1fr); grid-template-rows: repeat(1, 1fr); padding 20px
        grid-gap 20px 0
        .categoria
            height 362px; animation none !important;
            picture
                img
                    max-width: none; max-height: none;
            &.hasHover
                &:hover
                    .descricao
                        width 100%;
        .marcaDagua
            display none;
        .connecting
            display none;
        .assista
            position relative;
            &:before
                content ''; position absolute; bottom 0; left 50%; transform translateX(-50%); width 200%;
                background $laranja; height 3px
            button
                width 100%; border none;

