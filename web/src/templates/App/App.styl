// App

main#app
    background $preto url("~@images/background/img-noise-370x370.png"); display flex; flex-direction column;
    height 100vh
    .container
        display flex; align-items center; height 100%; overflow hidden; 
        >>> .__panel .__view
            width 100% !important
        >>> article
            height calc(100vh - 144px); width 100%; 
    &.loaded
        transition all .4s ease;
    &.white
        background-color $branco
    
    .fade-enter-active, .fade-leave-active
        transition opacity .5s;
    .fade-enter, .fade-leave-to
        opacity 0;
    .lgpd
        position fixed; bottom 20px; right 20px; background #fff; width 260px; padding 20px; border 1px solid $laranja
        border-radius 10px; z-index 2
        p
            color #000; font-size rem(13); margin-bottom 10px
            a
                color $laranja
        button
            background $laranja; color #fff; border-radius 5px; text-transform uppercase; font-size rem(13); font-weight $font-bold;
            padding 4px 10px

+tablet-1024()
    main#app
        padding-top 144px