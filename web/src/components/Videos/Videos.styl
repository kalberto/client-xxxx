// Videos

#videos
    background rgba(#000, .9); position fixed; top 0; left 0; right 0; bottom 0; z-index 100;
    display flex; align-items center; padding 70px 140px;

    .fechar
        font 0/0 a; color transparent; position absolute; top 15px; right 15px; display block
        width 32px; height 32px;
        &:before, &:after
            content ''; width 100%; height 2px; background #fff; display block; position absolute; top 50%;
            left 0; transform-origin center; transition all .3s ease; cursor pointer
        &:before
            transform translateY(-50%) rotate(-45deg); 
        &:after
            transform translateY(-50%) rotate(45deg); 
        &:hover
            &:before
                transform translateY(-50%) rotate(-40deg); 
            &:after
                transform translateY(-50%) rotate(40deg); 

    ul
        display flex; width 100%; flex-shrink 0; flex-wrap wrap;
    .video
        max-width 32%; width 100%; flex-shrink 0; margin 0 .5% 15px; display flex;
        justify-content center; flex-wrap wrap;
        h2
            color $branco; font-size rem(14); font-weight $font-regular; line-height rem(22); 
            text-transform uppercase; padding 0 12px; margin-bottom 10px; width 100%
            cursor pointer;
        p
            color $branco; font-size rem(14); font-weight $font-regular; line-height rem(22);
            border-left 2px solid $laranja2; padding 0 10px; margin-bottom 15px; max-height 66px;
            overflow hidden; height 100%; width 100%
        .video-wrap 
            position relative; padding-top 56.25%; overflow hidden; width 100%; background rgba($preto, .9);
            transition all .4s ease; cursor pointer; outline 0
            video
                position absolute; top 0; left 0; width 100%; opacity .6; transition all .5s ease;
            &:after
                content ''; background url("~@svgs/icon_play_circle.svg") center no-repeat; width 50px; height 50px;
                position absolute; top 50%; left 50%; transform translate(-50%, -50%);
        &.playing
            .video-wrap
                position fixed; max-width 100%; height 100%; z-index 10; top 0; left 0; padding-top inherit
                video
                    opacity 1; z-index 2; max-width 75%; top 50%; left 50%; transform translate(-50%, -50%)
                    cursor default; outline 0
                &:after
                    opacity 0; visibility hidden

+desktop-1366()
    #videos
        padding 50px 100px;

+media(max-width, 1024)
    #videos
        .video
            max-width 49%

+tablet-768()
    #videos
        .video
            max-width 100%; margin-bottom 25px;
            p
                max-height 100%; height auto

+iphone-plus()
    #videos
        padding 50px 35px