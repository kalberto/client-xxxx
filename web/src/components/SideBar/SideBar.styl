// Side bar

#sidebar
    height 100%; width 120px; flex-shrink 0; padding 15px 0 10px; display flex; flex-direction column; 
    align-items center; justify-content flex-end
    &.white
        .redes
            li
                a
                    color #000
    .language
        &:hover
            .flags
                max-height 200px
        > img
            margin 0 auto 20px
        .flags
            display flex; align-items center; flex-direction column; max-height 0; overflow hidden
            transition: all 0.8s ease; background #fff; border-radius 5px
            li
                margin-bottom 10px; padding 10px 10px 5px
                button
                    cursor pointer; filter grayscale(1); transition all 0.5s ease
                &:hover, &.ativo
                    button
                        filter grayscale(0)
    .redes
        display flex; align-items center; flex-direction column;
        li
            margin-bottom 15px; 
            a
                font-size rem(11); color #fff; opacity 0.7; line-height rem(11); text-decoration none;
                text-align center; display block; transition all 0.2s ease
                &:hover
                    opacity 1

+desktop-1024()
    #sidebar
        width 80px;

+tablet-1024()
    #sidebar
        display none