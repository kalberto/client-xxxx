// Videos

#video
    background rgba(#000, .9); position fixed; top 0; left 0; right 0; bottom 0; z-index 100;
    display flex; align-items center; padding 70px 140px;

    .fechar
        font 0/0 a; color transparent; position absolute; top 15px; right 15px; display block
        width 32px; height 32px; z-index 2
        &:before, &:after
            content ''; width 100%; height 2px; background #fff; display block; position absolute; top 50%;
            left 0; transform-origin center; transition all .3s ease; cursor pointer
        &:before
            transform translateY(-50%) rotate(-45deg); 
        &:after
            transform translateY(-50%) rotate(45deg); 
        &:hover
            &:before
                transform translateY(-50%) rotate(-40deg); 
            &:after
                transform translateY(-50%) rotate(40deg); 

    .video-wrap 
        position fixed; padding-top 56.25%; overflow hidden; max-width 100%; width 100%; height 100%;
        transition all .4s ease; outline 0; top 0; left 0; padding-top inherit
        video
            position absolute; top 0; left 0; width 100%; transition all .5s ease; outline 0;
            max-width 75%; top 50%; left 50%; transform translate(-50%, -50%);

+desktop-1366()
    #video
        padding 50px 100px;

+iphone-plus()
    #video
        padding 50px 35px