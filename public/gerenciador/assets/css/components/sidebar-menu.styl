.sidebar-menu
    background: #343838;
    width: 290px;
    
    .sidebar-menu-top
        background: #f7f7f7;

    .logo
        -webkit-mask-size: 75%;

.toolbar-painel

    position: fixed;
    top: 0;
    width: calc(100% - 290px);

    background: #ffffff !important;
    color: #343838 !important;
    z-index: 3;
    
    md-icon
        color #343838 !important

@media (max-width: 960px)
    
    .toolbar-painel
        width: 100%;
    
.cover-user
    background-position: center;
    background-size: cover;
    
md-list
    margin: 0;
    padding: 0;

    &:focus
        outline 0
    
    md-list-item
        padding: 0 !important;
        
        a
            display: block;
            padding: 24px
            border-left: 10px solid transparent;
            color: #c6c6c6;
            text-decoration: none;
            overflow auto
            transition all 0.25s
            width 100%

            &:focus
                outline 0

            md-icon
                float left
                color: white;

            label
                float: left;
                margin-top: 5px;
                margin-left: 14px;
                font-weight: 500;
                font-size: 14px;
                pointer-events: none;


        &:hover a
            background: #383E3E;
        
        &.active a
            border-left: 10px solid #e75629;
            background #3d4242
            color #ffffff