.expansion-panel
  display: block
  position: relative
  outline: none
  background: #fff;
  margin-top: 0
  margin-bottom: 0
  padding: 0
  box-shadow: 0 -1px 0 #e5e5e5, 0 0 2px rgba(0,0,0,.12), 0 2px 4px rgba(0,0,0,.24)
  color: rgba(0,0,0,0.87)
  -webkit-box-direction: normal

.expansion-panel-collapsed
  display: flex
  min-height: 48px
  line-height: 48px
  padding: 0 24px
  opacity: 1
  z-index: 2
  box-sizing: border-box

.expansion-panel-title
  color: #333
  -webkit-box-flex: 1
  -ms-flex: 1
  flex: 1
  font-size: 16px
  font-weight: 600
  min-width: 80px
  max-width: 184px
  overflow: hidden
  text-overflow: ellipsis
  text-align: left
  white-space: nowrap

.expansion-panel-summary
  color: #333
  -webkit-box-flex: 1
  -ms-flex: 1
  flex: 1
  font-size: 13px
  overflow: hidden
  text-overflow: ellipsis
  text-align: left